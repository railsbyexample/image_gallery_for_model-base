= render layout: 'devise/shared/layout', locals: { title: "Unlock instructions" } do
  = form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f|
    .form-group
      = f.email_field :email, autofocus: true, placeholder: 'Email', autocomplete: 'email', class: 'form-control'
    .form-group
      = f.submit "Get instructions", class: 'btn btn-primary btn-block'
  = render "devise/shared/links"

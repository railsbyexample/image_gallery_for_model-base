= render layout: 'devise/shared/layout', locals: { title: "Change your password" } do
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
    = f.hidden_field :reset_password_token

    .form-group
      = f.label :password, "New password", class: 'small'
      = f.password_field :password, autofocus: true, autocomplete: "off", class: 'form-control'

    .form-group
      = f.label :password_confirmation, "Confirm new password", class: 'small'
      = f.password_field :password_confirmation, autocomplete: "off"

    .form-group
      = f.submit "Change", class: 'btn btn-primary btn-block'

  = render "devise/shared/links"

= render layout: 'devise/shared/layout', locals: { title: "Recover your password" } do
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
    .form-group
      = f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: 'Email', class: 'form-control'

    .form-group
      = f.submit 'Get instructions', class: 'btn btn-primary btn-block'

  = render 'devise/shared/links'

.carousel.slide#gallery-controls{ 'data-ride' => 'carousel' }

  .carousel-inner
    - images.each_with_index do |image, index|
      %div{ class: (index.zero? ? 'carousel-item active' : 'carousel-item') }
        %div{ style: 'position: relative; width: 100%; height: 0; padding-bottom: 60%; overflow: hidden;' }
          = image_tag attachment_url(image, :attached_file), style: 'position: absolute; top: 0; height: 100%; width: 100%; object-fit: cover;'

  %a.carousel-control-prev{ href: '#gallery-controls', role: 'button', 'data-slide' => 'prev' }
    %span.carousel-control-prev-icon{ 'aria-hidden' => true }
    %span.sr-only Previous

  %a.carousel-control-next{ href: '#gallery-controls', role: 'button', 'data-slide' => 'next' }
    %span.carousel-control-next-icon{ 'aria-hidden' => true }
    %span.sr-only Next

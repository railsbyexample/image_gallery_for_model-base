= form_for [@owner, @image] do |f|
  - if @image.errors.any?
    #error_explanation
      %h2= "#{pluralize(@image.errors.count, "error")} prohibited this image from being saved:"
      %ul
        - @image.errors.full_messages.each do |message|
          %li= message

  .form-group
    = render 'shared/images_input', form: f

  .form-group
    = f.submit 'Save', class: 'btn btn-block btn-primary'

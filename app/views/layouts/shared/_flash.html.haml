- if notice.present?
  .notice.alert.alert-success.alert-dismissible.fade.show.mb-3{role: 'alert'}
    = notice
    %button{type: 'button', class: 'close', 'data-dismiss' => 'alert'}
      %span &times;

- if alert.present?
  .alert.alert-danger.alert-dismissible.fade.show.mb-3{role: 'alert'}
    = alert
    %button{type: 'button', class: 'close', 'data-dismiss' => 'alert'}
      %span &times;

= form_for @property do |f|
  - if @property.errors.any?
    #error_explanation
      %h2= "#{pluralize(@property.errors.count, "error")} prohibited this property from being saved:"
      %ul
        - @property.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :price_per_month
    = f.text_field :price_per_month
  .field
    = f.label :number_of_rooms
    = f.number_field :number_of_rooms
  .field
    = f.label :number_of_bathrooms
    = f.text_field :number_of_bathrooms
  .field
    = f.label :size_in_square_meters
    = f.text_field :size_in_square_meters
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'

= form_for @property do |f|
  - if @property.errors.any?
    #error_explanation
      %h2= "#{pluralize(@property.errors.count, "error")} prohibited this property from being saved:"
      %ul
        - @property.errors.full_messages.each do |message|
          %li= message

  .form-group
    = f.label :title, class: 'small'
    = f.text_field :title, class: 'form-control'
  .form-group
    = f.label :number_of_rooms, class: 'small'
    = f.text_field :number_of_rooms, class: 'form-control'
  .form-group
    = f.label :number_of_bathrooms, class: 'small'
    = f.text_field :number_of_bathrooms, class: 'form-control'
  .form-group
    = f.label :size_in_square_meters, class: 'small'
    = f.text_field :size_in_square_meters, class: 'form-control'
  .form-group
    = f.label :description, class: 'small'
    = f.text_area :description, class: 'form-control'
  .form-group
    = f.submit 'Save', class: 'btn btn-primary btn-block'
